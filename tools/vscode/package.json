{
  "name": "flux",
  "displayName": "flux",
  "description": "VSCode Extension for the Flux Refinement Type Checker",
  "version": "0.0.1",
  "repository": "https://github.com/flux/flux",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "Flux.toggle",
        "title": "Toggle Flux View"
      }
    ],
    "activationEvents": [
      "onCommand:Flux.toggle",
      "onStartupFinished"
    ],
    "languages": [
      {
        "id": "fluxc",
        "aliases": [
          "Flux Constraint",
          "fluxc"
        ],
        "extensions": [
          ".fluxc"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "fluxc",
        "scopeName": "source.fluxc",
        "path": "./syntaxes/fluxc.tmLanguage.json"
      },
      {
        "injectTo": [
          "source.rust"
        ],
        "scopeName": "flux-keywords.injection",
        "path": "./syntaxes/flux-keywords.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "prettier": "^3.4.1"
  }
}
