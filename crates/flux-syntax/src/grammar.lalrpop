Path: surface::Path = {
    <lo:@L> <segments:Sep1<"::", Ident>> <generics:GenericArgs?> <refine:RefineArgs?> <hi:@R> => {
        surface::Path {
            segments,
            generics: generics.unwrap_or_default(),
            refine: refine.unwrap_or_default(),
